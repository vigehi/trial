<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MainController">
    <HBox spacing="10">
        <TableView fx:id="carsTable">
            <columns>
                <TableColumn fx:id="carColumn" text="Car" />
                <TableColumn fx:id="ownerColumn" text="Owner" />
            </columns>
        </TableView>

        <TableView fx:id="loadersTable">
            <columns>
                <TableColumn fx:id="loaderColumn" text="Loader" />
            </columns>
        </TableView>

        <TableView fx:id="weightsTable">
            <columns>
                <TableColumn fx:id="weightColumn" text="Weight" />
            </columns>
        </TableView>

        <Button fx:id="addDataButton" text="Add Data" onAction="#addDataButtonClicked" />
    </HBox>

    <TableView fx:id="dataTable">
        <columns>
            <TableColumn fx:id="timestampColumn" text="Timestamp" />
            <TableColumn fx:id="carRegNumberColumn" text="Car Registration Number" />
            <TableColumn fx:id="loaderNameColumn" text="Loader Name" />
            <TableColumn fx:id="weight1Column" text="Weight" />
        </columns>
    </TableView>
</VBox>
